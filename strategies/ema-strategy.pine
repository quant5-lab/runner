//@version=5
indicator("EMA Strategy", shorttitle="EMA", overlay=true)

// EMA calculation
ema_1 = ta.ema(close, 20)
ema_2 = ta.ema(close, 50)

// Bull signal when ema_1 > ema_2
bullSignal = ema_1 > ema_2 ? 1 : 0

// Plot the indicators
plot(ema_1, "EMA 1", color=color.blue, linewidth=2)
plot(ema_2, "EMA 2", color=color.red, linewidth=2)
plot(bullSignal, "Bull Signal", color=color.green, linewidth=1)