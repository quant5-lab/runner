{
  "name": "pinets-example-app",
  "version": "1.0.0",
  "description": "Lightweight Node.js app demonstrating PineTS usage",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"node --watch index.js\" \"http-server out -p 8080 -c-1\"",
    "start": "node index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "inversify": "7.10.2",
    "pinets": "file:../PineTS",
    "reflect-metadata": "0.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "8.57.1",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "7.2.1",
    "http-server": "^14.1.1",
    "prettier": "3.6.2"
  }
}
