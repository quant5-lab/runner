{
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["coverage/**", "node_modules/**", "out/**"],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "space-before-function-paren": ["error", "never"],
    "semi": ["error", "always"],
    "no-empty": ["error", {"allowEmptyCatch": false}]
  }
}
